---
const colaboradores = [
  { nombre: "SmartFit Studio", img: "/colaboradores/colab-1.jpg" },
  { nombre: "NutriBalance Center", img: "/colaboradores/colab-2.png" },
  { nombre: "Clínica Bienestar Total", img: "/colaboradores/colab-3.jpg" },
  { nombre: "HealthyLife Spa", img: "/colaboradores/colab-4.jpg" },
  { nombre: "Farmacia VidaPlena", img: "/colaboradores/colab-5.jpg" },
];
---

<section id="colaboradores" class="w-full bg-[#f6fbf6] py-16">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex flex-col items-center gap-3 mb-8">
      <span
        class="bg-green-700 text-white text-sm font-semibold px-4 py-1 rounded-full shadow"
        >Colaboradores</span
      >
      <h2 class="text-5xl font-bold text-gray-800 text-center">
        Marcas que confían en NutriLife
      </h2>
      <p class="text-lg text-gray-800 text-center max-w-2xl">
        Juntos promovemos el bienestar y la salud en nuestra comunidad.
      </p>
    </div>
    <div class="flex flex-col md:flex-row gap-8 justify-center mb-8">
      {
        colaboradores.map((colab) => (
          <div class="flex-1 bg-white border border-green-100 rounded-2xl shadow p-8 flex flex-col items-center max-w-xs mx-auto hover:shadow-2xl hover:-translate-y-1 transition-all duration-300">
            <img
              src={colab.img}
              alt={`Logo de ${colab.nombre}`}
              class="w-24 h-24 rounded-full object-cover mb-4 border-4 border-green-100 shadow grayscale"
              width="96"
              height="96"
              loading="lazy"
            />
            <h3 class="text-lg font-semibold text-green-800 text-center mb-1">
              {colab.nombre}
            </h3>
          </div>
        ))
      }
    </div>
  </div>
</section>
